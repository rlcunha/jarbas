# App
DEBUG_MODE=false

# OpenAI
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_EXPIRATION=3600

# LLM
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_MAX_CONTEXT_TOKENS=4000

# Azure Data Lake
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=data

# Azure Event Grid (opcional)
AZURE_EVENTGRID_ENDPOINT=your-eventgrid-endpoint
AZURE_EVENTGRID_KEY=your-eventgrid-key

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=jarbas-vectors
PINECONE_NAMESPACE=optional-namespace

# Vector Search
VECTOR_TOP_K=5
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_CACHE_ENABLED=true
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Avatar
AVATAR_MODEL=facebook/fastspeech2-en-ljspeech
AVATAR_TIMEOUT=30.0
AVATAR_MAX_RETRIES=3