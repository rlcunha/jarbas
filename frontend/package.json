{
  "name": "frontend",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "next": "15.1.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.1.6",
    "@types/react": "18.2.15",
    "@types/node": "20.4.5",
    "axios": "^1.4.0",
    "react-redux": "^8.1.2",
    "@reduxjs/toolkit": "^1.9.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
